<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form_view_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.view.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <group name="partner_details" position="inside">
                    <field name="can_edit_authorization_state" invisible="1"/>
                    <field name="insurance_number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="authorization_status"
                           attrs="{'readonly': ['|', ('can_edit_authorization_state', '=', False), ('state', '!=', 'draft')]}"/>
                </group>

                <field name="is_downpayment" position="after">
                    <field name="total_margin" optional="show"/>
                </field>
            </field>
        </record>
    </data>
</odoo>